<div class ="container mt-5">
  <h1><%= @list.name %></h1>
  <div>
    <% @list.bookmarks.each do |bookmark| %>
      <%= link_to "Remove bookmark", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger"%>
      <ul>
        <li><%= bookmark.movie.title %></li>
        <li><%= bookmark.movie.poster_url %></li>
        <li><%= bookmark.movie.overview %></li>
        <li><%= bookmark.movie.rating %></li>
      </ul>
      <p>Comment:</p>
      <p><%= bookmark.comment %></p>
    <% end %>
  </div>
  <div>
    <%= link_to "Back", lists_path(@list), class: "btn btn-primary" %>
    <%= link_to "Add a bookmark", new_list_bookmark_path(@list), class: "btn btn-primary" %>
  </div>
</div>
