<div class="banner-container">
  <div class="banner" style="background-image: url('<%= image_path('main_banner.jpg') %>');">
    <div class="container">
      <h1>My movie lists</h1>
      <p>Keep track of your favorite movies</p>
      <%= link_to "Add a list", new_list_path(@list), class: "btn-basic" %>
    </div>
  </div>
</div>

<div class="container mt-5">
  <% @lists.each do |list| %>
    <% if list.photo.attached? %>
      <div class="cards">
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url('<%= url_for(list.photo) %>')">
          <div class="card-contents">
            <%= link_to list.name, list_path(list), class: "card-name" %>
            <%= link_to "X", delete_list_path(list), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn-x"%>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
